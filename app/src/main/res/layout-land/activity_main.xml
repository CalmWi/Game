<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="50"
        android:gravity="center">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:paddingLeft="46dp"
            android:paddingRight="46dp"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/show_player"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/player_name"
                android:textColor="@color/purple_200"
                android:textSize="22dp" />
            <Button
                android:id="@+id/btn_change_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/bth_change_name"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/show_msg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/show_msg_label"
            android:textColor="@color/purple_200"
            android:textAlignment="center"
            android:textSize="30dp" />
        <EditText
            android:id="@+id/edit_num"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="@string/hint_label"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_guess"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/btn_guess_label"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="50"
        android:gravity="center">

        <TextView
            android:id="@+id/show_hint"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/show_hint_label"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/show_attempts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/show_attempts_label"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:fontFamily="serif-monospace"/>

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/btn_restart_label"
            android:onClick="restart"
            />
        <Button
            android:id="@+id/btn_send_result"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/btn_send_label"
            />
        <Button
            android:id="@+id/btn_save_result"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/btn_save_label"
            />
    </LinearLayout>
</android.widget.LinearLayout>